// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SaleMode {
  AUCTION
  INSTANT_SALE
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  SOLD
  ARCHIVED
  ENDED
  CANCELLED
}

enum OfferStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum Role {
  PARTICULIER
  PROFESSIONNEL
  ADMIN
}

enum AccountStatus {
  PENDING_VERIFICATION
  VERIFIED
  SUSPENDED
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  firstName     String
  lastName      String
  role          Role
  status        AccountStatus  @default(PENDING_VERIFICATION)
  emailVerified Boolean        @default(false)
  notificationsEmail Boolean   @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relations
  particulierProfile    ParticulierProfile?
  professionnelProfile  ProfessionnelProfile?
  emailVerification    EmailVerification?
  passwordReset        PasswordReset?
  listings             Listing[]              @relation("SellerListings")
  offers               Offer[]                @relation("BuyerOffers")
  listingMessages      ListingMessage[]       @relation("MessageSender")
  favorites            Favorite[]             @relation("UserFavorites")
  bids                 Bid[]                  @relation("UserBids")
  feedbacks            Feedback[]             @relation("UserFeedbacks")
  paymentMethod         PaymentMethod?

  @@map("users")
}

model ParticulierProfile {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Informations personnelles
  profilePhoto    String?
  postalAddress   String
  
  // Validation âge
  isOver18        Boolean  @default(false)
  
  // Consentements
  newsletter      Boolean  @default(false)
  rgpdAccepted    Boolean  @default(false)
  rgpdAcceptedAt  DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("particulier_profiles")
}

model ProfessionnelProfile {
  id                    String   @id @default(uuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Informations entreprise
  companyName           String
  siret                 String   @unique
  officialDocument      String
  postalAddress         String
  
  // Marketing
  website               String?
  specialities          String[]
  mostSearchedItems    String[]
  socialNetworks       Json?
  
  // Documents légaux
  cgvAccepted           Boolean  @default(false)
  cgvAcceptedAt        DateTime?
  mandateAccepted      Boolean  @default(false)
  mandateAcceptedAt     DateTime?
  
  // Consentements
  newsletter            Boolean  @default(false)
  rgpdAccepted          Boolean  @default(false)
  rgpdAcceptedAt        DateTime?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("professionnel_profiles")
}

model EmailVerification {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@map("email_verifications")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@map("password_resets")
}

model Listing {
  id                String            @id @default(uuid())
  sellerId          String
  seller            User              @relation("SellerListings", fields: [sellerId], references: [id], onDelete: Cascade)
  title             String
  categoryId        String
  category          Category          @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  dimensions        String
  weightKg          Decimal           @db.Decimal(10, 2)
  description       String
  priceDesired      Decimal           @db.Decimal(10, 2)
  saleMode          SaleMode
  auctionStartPrice Decimal?          @db.Decimal(10, 2)
  auctionEndAt      DateTime?
  publishedAt       DateTime?
  status            ListingStatus     @default(PUBLISHED)
  photos            ListingPhoto[]
  documents         ListingDocument[]
  offers            Offer[]           @relation("ListingOffers")
  messages          ListingMessage[]
  bids              Bid[]
  favorites         Favorite[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([sellerId])
  @@index([categoryId])
  @@map("listings")
}

model ListingPhoto {
  id        String   @id @default(uuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  position  Int
  createdAt DateTime @default(now())

  @@index([listingId])
  @@map("listing_photos")
}

model ListingDocument {
  id        String   @id @default(uuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  label     String?
  createdAt DateTime @default(now())

  @@index([listingId])
  @@map("listing_documents")
}

model PaymentMethod {
  id                String   @id @default(uuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId  String   @unique
  stripePaymentMethodId String?
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("payment_methods")
}

model Offer {
  id           String       @id @default(uuid())
  listingId    String
  listing      Listing      @relation("ListingOffers", fields: [listingId], references: [id], onDelete: Cascade)
  buyerId      String
  buyer        User         @relation("BuyerOffers", fields: [buyerId], references: [id], onDelete: Cascade)
  amount       Decimal      @db.Decimal(10, 2)
  status       OfferStatus  @default(PENDING)
  message      String?
  readBySeller Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([listingId])
  @@index([buyerId])
  @@map("offers")
}

model ListingMessage {
  id           String   @id @default(uuid())
  listingId    String
  listing      Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  senderId     String
  sender       User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  content      String
  readBySeller Boolean  @default(false)
  createdAt    DateTime @default(now())

  @@index([listingId])
  @@index([senderId])
  @@map("listing_messages")
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  listingId String
  user      User     @relation("UserFavorites", fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
  @@index([listingId])
  @@map("favorites")
}

model Bid {
  id            String   @id @default(uuid())
  listingId     String
  listing       Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  bidderId      String
  bidder        User     @relation("UserBids", fields: [bidderId], references: [id], onDelete: Cascade)
  amount        Decimal  @db.Decimal(10, 2)
  isWinning     Boolean  @default(false)
  createdAt     DateTime @default(now())

  @@index([listingId])
  @@index([bidderId])
  @@map("bids")
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation("UserFeedbacks", fields: [userId], references: [id], onDelete: Cascade)
  stars     Int?
  nps       Int?
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feedbacks")
}

model PlatformCommission {
  id         String            @id @default(uuid())
  isGlobal   Boolean           @default(false)
  categoryId String?
  category   Category?         @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  buyerRate  Decimal           @db.Decimal(5, 4)
  sellerRate Decimal           @db.Decimal(5, 4)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@unique([isGlobal])
  @@unique([categoryId])
  @@map("platform_commissions")
}

model Category {
  id        String   @id @default(uuid())
  code      String   @unique
  label     String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listings  Listing[]
  commissions PlatformCommission[]
  formConfigs ListingFormConfig[]

  @@map("categories")
}

model ListingFormConfig {
  id         String    @id @default(uuid())
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  saleMode   SaleMode?
  fields     Json
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([categoryId, saleMode])
  @@map("listing_form_configs")
}
