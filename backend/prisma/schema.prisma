// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PARTICULIER
  PROFESSIONNEL
  ADMIN
}

enum AccountStatus {
  PENDING_VERIFICATION
  VERIFIED
  SUSPENDED
}

enum ListingCategory {
  PEINTURE
  SCULPTURE
  MONTRE
  BIJOU
  OBJET_ART
  PHOTOGRAPHIE
  VETEMENT
  ACCESSOIRE
  DESIGN
  AUTRE
}

enum SaleMode {
  AUCTION
  INSTANT_SALE
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  ENDED
  CANCELLED
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  firstName     String
  lastName      String
  role          Role
  status        AccountStatus  @default(PENDING_VERIFICATION)
  emailVerified Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relations
  particulierProfile    ParticulierProfile?
  professionnelProfile  ProfessionnelProfile?
  emailVerification    EmailVerification?
  passwordReset        PasswordReset?
  listings             Listing[]
  paymentMethod         PaymentMethod?
  bids                  Bid[]

  @@map("users")
}

model ParticulierProfile {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Informations personnelles
  profilePhoto    String?  // URL ou chemin vers la photo
  postalAddress   String   // Adresse postale complète
  
  // Validation âge
  isOver18        Boolean  @default(false)
  
  // Consentements
  newsletter      Boolean  @default(false)
  rgpdAccepted    Boolean  @default(false)
  rgpdAcceptedAt  DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("particulier_profiles")
}

model ProfessionnelProfile {
  id                    String   @id @default(uuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Informations entreprise
  companyName           String   // Dénomination de l'entreprise
  siret                 String   @unique // Numéro SIRET
  officialDocument      String   // URL ou chemin vers le document (K-Bis, avis INSEE, etc.)
  postalAddress         String   // Adresse postale
  
  // Marketing
  website               String?  // Site internet (optionnel)
  specialities          String[] // Spécialités (obligatoire, tableau)
  mostSearchedItems    String[] // Objets recherchés (obligatoire, tableau)
  socialNetworks       Json?    // Réseaux sociaux (optionnel, format JSON flexible)
  
  // Documents légaux
  cgvAccepted           Boolean  @default(false)
  cgvAcceptedAt        DateTime?
  mandateAccepted      Boolean  @default(false) // Mandat d'apport d'affaire
  mandateAcceptedAt     DateTime?
  
  // Consentements
  newsletter            Boolean  @default(false)
  rgpdAccepted          Boolean  @default(false)
  rgpdAcceptedAt        DateTime?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("professionnel_profiles")
}

model EmailVerification {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@map("email_verifications")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@map("password_resets")
}

model Listing {
  id               String          @id @default(uuid())
  sellerId         String
  seller           User            @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  title            String
  category         ListingCategory
  dimensions       String
  weightKg         Decimal         @db.Decimal(10, 2)
  description      String
  priceDesired     Decimal         @db.Decimal(10, 2)
  saleMode         SaleMode
  auctionStartPrice Decimal?       @db.Decimal(10, 2)
  auctionEndAt     DateTime?
  publishedAt      DateTime?
  status           ListingStatus   @default(PUBLISHED)
  photos           ListingPhoto[]
  documents        ListingDocument[]
  bids             Bid[]
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@index([sellerId])
  @@map("listings")
}

model ListingPhoto {
  id        String   @id @default(uuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  position  Int
  createdAt DateTime @default(now())

  @@index([listingId])
  @@map("listing_photos")
}

model ListingDocument {
  id        String   @id @default(uuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  label     String?
  createdAt DateTime @default(now())

  @@index([listingId])
  @@map("listing_documents")
}

model PaymentMethod {
  id                String   @id @default(uuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId  String   @unique // ID du client Stripe
  stripePaymentMethodId String? // ID de la méthode de paiement par défaut
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("payment_methods")
}

model Bid {
  id            String   @id @default(uuid())
  listingId     String
  listing       Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  bidderId      String
  bidder        User     @relation(fields: [bidderId], references: [id], onDelete: Cascade)
  amount        Decimal  @db.Decimal(10, 2)
  isWinning     Boolean  @default(false)
  createdAt      DateTime @default(now())

  @@index([listingId])
  @@index([bidderId])
  @@map("bids")
}
